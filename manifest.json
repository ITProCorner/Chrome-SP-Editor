{
	"name": "SP Editor",
	"homepage_url": "https://github.com/tavikukko/Chrome-SP-Editor",
	"version": "1.4.0",
	"description": "Create and update SharePoint Online/OnPremise css/js files, inject files to web, manage web properties and Webhook subscriptions from Chrome Developer Tools",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"96": "icon96.png",
		"128": "icon128.png"
	},
	"web_accessible_resources": [
    "alertify.js", "pnp.js", "system.js"
  ],
	"devtools_page": "devtools.html",
	"background": { "scripts": [ "background.js"] },
	   "content_scripts": [
        {
			"run_at": "document_end",
			"css": ["alertify.css"],
            "js": ["alertify.js", "content.js", "pnp.js", "system.js"],
            "matches": ["<all_urls>"]
        }
    ],
	"permissions": ["webRequest",
        "webRequestBlocking",
        "tabs",
        "storage","https://*/*", "http://*/*", "tabs"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"manifest_version": 2
}
