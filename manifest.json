{
	"name": "Chrome SP Editor",
	"homepage_url": "https://github.com/tavikukko/Chrome-SP-Editor",
	"version": "1.0.0",
	"description": "Create and update SharePoint Online css/js files from Chrome Developer Tools",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"96": "icon96.png",
		"128": "icon128.png"
	},
	"devtools_page": "devtools.html",
	"background": { "scripts": [ "background.js"] },
	   "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ],
	"permissions": ["https://*/*", "tabs"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"manifest_version": 2
}
